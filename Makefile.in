HEADER = config.h

PROGRAM = mpi_test_suite

.SUFFIXES: .o .c

all: $(OBJ)
	$(CC) -o $(PROGRAM) $(OBJ) $(LDFLAGS)

$(OBJ): $(HEADER)
.c.o:   $(HEADER)
	$(CC) $(CFLAGS) -c $< -o $@

clean mostlyclean:
	$(RM) $(OBJ) $(PROGRAM)

distclean extraclean: clean
